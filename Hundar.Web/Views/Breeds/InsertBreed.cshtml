@using Hundar.Web.Models
@model Breed
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
    <html>
    <head>
    <title>Insert Dogbreed</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container m-5 p-3">

            <div class="row">
            <div class="col col-sm-10 col-md-6  mx-auto border p-3 bg-secondary">

            <form asp-controller="Breeds" asp-action="InsertBreed" method="POST"  >

            <input asp-for="BreedName" class="form-control mb-2" />
            <span class="text-danger mb-2" asp-validation-for="BreedName"></span>

            <input asp-for="BreedType" class="form-control mb-2" />
            <span class="text-danger mb-2" asp-validation-for="BreedType"></span>

            <input asp-for="Description" class="form-control mb-2" />
            <span class="text-danger mb-2" asp-validation-for="Description"></span>

            <input type="submit" value="Insert Breed" class="form-control mb-2 bg-primary" />

                <!-- button type="submit">Insert</button -->


            </form>


        </div>
        </div>

        </div>
    </body>
</html>
